<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Details</title>
    <link rel="stylesheet" href="getBook.css">
</head>
<body>
    <h1>Book Details</h1>
    <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Publication Year</th>
            <th>Cover Image</th>
            <th>Action</th>
        </tr>
        <!-- Loop through book data (Replace this with your server-side code to fetch book data) -->
        <!-- Example data (you should replace this with data from your server): -->
        <% books.forEach(function(book) { %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.genre %></td>
                <td><%= book.publicationYear %></td>
                <td><%= book.coverImage %></td>
                <td>
                    <button onclick="updateBook('<%= book._id %>')">Update</button>
                    <button onclick="deleteBook('<%= book._id %>')">Delete</button>
                </td>
            </tr>
        <% }); %>
    </table>
    <script>
        function updateBook(bookId) {
            // Redirect to the updateBook.ejs view with the book ID as a query parameter
            window.location.href = `/updateBook?bookId=${bookId}`;
        }

        function deleteBook(bookId) {
        // Display a confirmation dialog
        if (confirm("Are you sure you want to delete this book?")) {
            // If the user confirms, redirect to the deleteBook.ejs view with the book ID as a query parameter
            window.location.href = `/deleteBook?bookId=${bookId}`;
        }
    }
    </script>
</body>
</html>
